<ScrollView
    style="@style/AB.Group.Scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <LinearLayout style="@style/AB.Group.Center">

        <ImageView
            android:id="@+id/part_app_icon"
            style="@style/AB.Image"
            android:contentDescription="@string/desc_app_icon" />

        <TextView
            android:id="@+id/part_app_name"
            style="@style/AB.TextView.Name" />

        <TextView
            android:id="@+id/part_version"
            style="@style/AB.TextView.Version" />

        <TextView
            android:id="@+id/part_opensource"
            style="@style/AB.TextView.Link"
            android:text="@string/about_opensource_libraries" />

        <FrameLayout
            android:id="@+id/part_custom"
            style="@style/AB.Group" />

        <View style="@style/AB.Space.4" />
    </LinearLayout>
</ScrollView>