<LinearLayout
    style="@style/group.list_item"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout style="@style/group.city_ticket">

        <LinearLayout style="@style/group.horizontal.content">

            <TextView
                android:id="@+id/validity"
                style="@style/text.list_item" />
        </LinearLayout>

        <LinearLayout style="@style/group.ticket_price">

            <TextView
                android:id="@+id/price"
                style="@style/text.city_ticket_price" />

            <TextView
                android:id="@+id/price_note"
                style="@style/text.city_ticket_price_note" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/note"
        style="@style/text.city_ticket_note" />
</LinearLayout>