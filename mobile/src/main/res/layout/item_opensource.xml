<RelativeLayout
    style="@style/AB.Group.ListItem"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/name"
        style="@style/AB.TextView.LibraryName"
        android:layout_marginLeft="@dimen/grid_3" />

    <TextView
        android:id="@+id/license"
        style="@style/AB.TextView.Link"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/grid_3" />

    <TextView
        android:id="@+id/author"
        style="@style/AB.TextView"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/grid_3"
        android:layout_marginTop="@dimen/grid_2" />

    <TextView
        android:id="@+id/project_website"
        style="@style/AB.TextView.Link"
        android:layout_alignParentRight="true"
        android:layout_below="@id/license"
        android:layout_marginRight="@dimen/grid_3"
        android:layout_marginTop="@dimen/grid_2"
        android:text="@string/about_project_web" />

</RelativeLayout>